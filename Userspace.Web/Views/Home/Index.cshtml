@model IEnumerable<Userspace.Web.Models.LinkViewModel>

@{
    ViewData["Title"] = "Home page";
}

<h1>Links</h1>

<p>
    <a>Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Link.ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Link.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Link.ID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Link.Name)
                </td>
                <td>
                    @Html.ActionLink("Create", "Index", new
               {
                   controller = "Home",
                   action = "Index"
               }) |
                    @Html.ActionLink("Edit", "Index", new
               {
                   controller = "Home",
                   action = "Index"
               }) |
                    @Html.ActionLink("Delete", "Index", new
                 {
                     controller = "Home",
                     action = "Index"
                 })
                </td>
            </tr>
        }
    </tbody>
</table>
